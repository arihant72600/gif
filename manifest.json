{
    "name": "gifSummarizer",
    "description" : "Takes longer texts and condesnses them to a series of gifs",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": [
        "contextMenus",
        "activeTab",
        "webNavigation",

        "tabs"
    
      ],

    "content_scripts": [

        {
    
          "matches": ["<all_urls>"],
    
          "js": ["src/build/main.js"]
    
        }
        
      ],
      "background": {
        "scripts": ["src/js/background.js"]
      }
    

  }
  